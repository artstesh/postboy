{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "postboy": {
      "projectType": "library",
      "root": "projects/postboy",
      "sourceRoot": "projects/postboy/src",
      "prefix": "postboy",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/postboy/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/postboy/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/postboy/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/**/*.ts",
              "projects/**/*.component.html"
            ]
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "main": "projects/postboy/src/test.ts",
            "tsConfig": "projects/postboy/tsconfig.spec.json",
            "karmaConfig": "projects/postboy/karma.conf.js",
            "codeCoverage": true,
            "customWebpackConfig": {
              "path": "./node_modules/@artstesh/forger/lib/webpack.config.js"
            }
          }
        }
      }
    }
  },
  "defaultProject": "postboy"
}
